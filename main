  <script>
    const phoneDirectory = {
      "Dr. Smith": "555-1234",
      "Dr. Johnson": "555-5678",
      "Jason Speigler Lee": "555-9012",
      "Neel Patel": "989-854-8539"
    };

    function updatePhoneSelect(selectElem) {
      const name = selectElem.value;
      const phoneCell = selectElem.parentElement.parentElement.querySelector('.phone-cell');
      if (name && phoneDirectory[name]) {
        phoneCell.textContent = phoneDirectory[name];
        phoneCell.contentEditable = "false";
      } else {
        phoneCell.textContent = "";
        phoneCell.contentEditable = "true"; // allow manual entry when name is blank or unknown
      }
    }

    function authenticate() {
      const pw = document.getElementById('password-input').value;
      if (pw === 'admin123') {
        document.getElementById('login-screen').style.display = 'none';
        document.getElementById('schedule-container').style.display = 'block';
      } else {
        document.getElementById('login-error').style.display = 'block';
      }
    }
  </script>
